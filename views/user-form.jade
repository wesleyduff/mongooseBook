extends layout

block content
	h1= title
	form(id="frmUserProfile", method="post", action="" ng-submit="submit()")
		label(for="FullName") Full name
		input(type="text", name="Fullname", id="FullName", ng-model="fullName")
		label(for="Email") Email
		input(type="email", name="Email", id="Email", ng-model="email")
		input(type="submit", value="#{buttonText}")
	#output
		| {{fullName}} with email of {{email}}